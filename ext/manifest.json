{
  "name": "MOJiDict Helper",
  "description": "Show popup of Japanese vocabulary when double clicking on any text in webpage",
  "version": "1.0.0",
  "incognito": "split",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "https://*.mojidict.com/*"
      ],
      "css": ["style.css"],
      "js": ["main.js"]
    }
  ],
  "icons": { "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}

